{
  "name": "pokedex-monorepo",
  "version": "0.0.1",
  "description": "Pokedex Monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "start:dev:frontend": "pnpm --filter frontend start:dev",
    "start:dev:backend": "pnpm --filter backend start:dev",
    "start:prod:frontend": "pnpm --filter frontend start:prod",
    "start:prod:backend": "pnpm --filter backend start:prod",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r test:unit",
    "test:e2e": "pnpm -r test:e2e",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.5",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  }
}
